---
import Layout from "~/layouts/Layout.astro";
import Section from "~/components/Section.astro";
import Heading from "~/components/Heading.astro";
import ProductsCard from "~/components/ProductsCard.astro";
import Grid from "~/components/Grid.astro";
import { Picture } from "astro:assets";


//images
import Arabika from "~/assets/images/100 arabika.jpeg";
import Robosta from "~/assets/images/100 robosta.jpeg";
import Brazil from "~/assets/images/arabika brazil.jpeg";
import Colombia from "~/assets/images/arabika colombia.jpeg";
import Coffem from "~/assets/images/coffee meet.jpeg";
import HotChocolate from "~/assets/images/hot chocolate.jpeg";
import InstantCoffee from "~/assets/images/instant coffee.jpeg";
import MixCoffee from "~/assets/images/mix coffee.jpeg";
import TurkishCoffee from "~/assets/images/turkish coffee.jpeg";


---



<Layout>
	<Section class:list={"bg-white"}>
		<Heading>
			<h4 slot="heading-title" class="font-black text-brand-brown h3">طعم خوش قهوه را زندگی كن</h4>
			<p slot="heading-content">
				محصولات ما
			</p>
		</Heading>

		<Grid>
		<div slot="grid-content-1"> 
			<ProductsCard title="قهوه میکس (۱۰۰ عربیکا)">
				<div slot="picture">
					<Picture
						class:list={"object-contain md:w-96 md:h-96 w-36 h-36"}
						src={Arabika}
						formats={["jpeg", "webp", "png"]}
						alt="arabika"
					/>
				</div>
			</ProductsCard>
		</div>

		<div slot="grid-content-1"> 
			<ProductsCard title="قهوه میکس (۱۰۰ روبوستا)">
				<div slot="picture">
					<Picture
						class:list={"object-contain md:w-96 md:h-96 w-36 h-36"}
						src={Robosta}
						formats={["jpeg", "webp", "png"]}
						alt="robosta"
					/>
				</div>
			</ProductsCard>
		</div>

		<div slot="grid-content-1"> 
			<ProductsCard title="قهوه عربیکا (برزیل)">
				<div slot="picture">
					<Picture
						class:list={"object-contain md:w-96 md:h-96 w-36 h-36"}
						src={Brazil}
						formats={["jpeg", "webp", "png"]}
						alt="arabika brazil"
					/>
				</div>
			</ProductsCard>
		</div>
		</Grid>

		<Grid>
			<div slot="grid-content-1"> 
				<ProductsCard title="قهوه عربیکا (کلومبیا)">
					<div slot="picture">
						<Picture
							class:list={"object-contain md:w-96 md:h-96 w-36 h-36"}
							src={Colombia}
							formats={["jpeg", "webp", "png"]}
							alt="arabika colombia"
						/>
					</div>
				</ProductsCard>
			</div>
	
			<div slot="grid-content-1"> 
				<ProductsCard title="کافی میت">
					<div slot="picture">
						<Picture
							class:list={"object-contain md:w-96 md:h-96 w-36 h-36"}
							src={Coffem}
							formats={["jpeg", "webp", "png"]}
							alt="coffe meet"
						/>
					</div>
				</ProductsCard>
			</div>
	
			<div slot="grid-content-1"> 
				<ProductsCard title="هات چاکلت">
					<div slot="picture">
						<Picture
							class:list={"object-contain md:w-96 md:h-96 w-36 h-36"}
							src={HotChocolate}
							formats={["jpeg", "webp", "png"]}
							alt="hot chocolate"
						/>
					</div>
				</ProductsCard>
			</div>
			</Grid>

			<Grid>
				<div slot="grid-content-1"> 
					<ProductsCard title="قهوه فوری">
						<div slot="picture">
							<Picture
								class:list={"object-contain md:w-96 md:h-96 w-36 h-36"}
								src={InstantCoffee}
								formats={["jpeg", "webp", "png"]}
								alt="instannt coffee"
							/>
						</div>
					</ProductsCard>
				</div>
		
				<div slot="grid-content-1"> 
					<ProductsCard title="قهوه میکس">
						<div slot="picture">
							<Picture
								class:list={"object-contain md:w-96 md:h-96 w-36 h-36"}
								src={MixCoffee}
								formats={["jpeg", "webp", "png"]}
								alt="mix coffee"
							/>
						</div>
					</ProductsCard>
				</div>
		
				<div slot="grid-content-1"> 
					<ProductsCard title="قهوه ترک ">
						<div slot="picture">
							<Picture
								class:list={"object-contain md:w-96 md:h-96 w-36 h-36"}
								src={TurkishCoffee}
								formats={["jpeg", "webp", "png"]}
								alt="turkish coffee"
							/>
						</div>
					</ProductsCard>
				</div>
				</Grid>


	</Section>





